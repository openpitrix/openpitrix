# Install vgo: go get golang.org/x/vgo

default: test vgo_test
	vgo install

test:
	go clean ./...
	go fmt ./...
	go vet ./...
	go test ./...

vgo_test:
	vgo clean ./...
	vgo fmt ./...
	vgo vet ./...
	vgo test ./...

clean:
